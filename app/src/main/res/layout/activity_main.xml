<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="272dp"
        android:layout_toStartOf="@+id/setting_button"
        app:srcCompat="@drawable/baseline_view_list_black_24" />

    <ImageButton
        android:id="@+id/setting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/baseline_settings_black_24" />

    <TextView
        android:id="@+id/main_textView"
        android:layout_width="341dp"
        android:layout_height="190dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"


        android:background="@drawable/background_main_add_photo"
        android:gravity="center_horizontal"
        android:text="오늘의 사진을 기록해보세요"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_button"
        android:layout_width="296dp"
        android:layout_height="42dp"
        android:layout_alignStart="@+id/main_textView"
        android:layout_alignTop="@+id/main_textView"
        android:layout_alignEnd="@+id/main_textView"
        android:layout_alignBottom="@+id/main_textView"
        android:layout_marginStart="21dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="null"
        android:background="@drawable/background_main_add_button"

        android:text="OK" />


</RelativeLayout>